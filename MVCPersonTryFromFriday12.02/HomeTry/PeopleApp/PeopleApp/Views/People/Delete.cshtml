@model PeopleService.PersonViewModel

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<div class="modal-content" id="modalWindow">
    @using (Ajax.BeginForm("Delete", "People", new AjaxOptions { }))
    {
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>PersonViewModel</h4>
            <hr />
            <dl class="dl-horizontal">
                @Html.HiddenFor(model => model.UserID)
                @Html.HiddenFor(model => model.ID)
                <dt>
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FirstName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LastName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Age)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Age)
                </dd>

                <br />
                @Html.DisplayNameFor(model => model.phones)
                <br />
                <div>____________________________________</div>
                @for (int i = 0; i < Model.phones.Count; i++)
                {
                    <dd>
                        @Html.DisplayFor(model => model.phones[i].Number)
                    </dd>
                    <dd>
                        @Html.DisplayFor(model => model.phones[i].Type)
                    </dd>
                    <br />
                    <div>_ _ _ _ _ _ _ _ _ _ _ _ _ _ _ </div>
                }

                <br />
                @Html.DisplayNameFor(model => model.addresses)
                <br />
                <div>____________________________________</div>
                @for (int i = 0; i < Model.addresses.Count; i++)
                {
                    <dd>
                        @Html.DisplayNameFor(model => model.addresses[i].street)
                        <br />
                        @Html.DisplayFor(model => model.addresses[i].street.Name)
                    </dd>
                    <dd>
                        @Html.DisplayNameFor(model => model.addresses[i].BuildingNumber)
                        <br />
                        @Html.DisplayFor(model => model.addresses[i].BuildingNumber)
                    </dd>
                    <dd>
                        @Html.DisplayNameFor(model => model.addresses[i].FlatNumber)
                        <br />
                        @Html.DisplayFor(model => model.addresses[i].FlatNumber)
                    </dd>
                    <dd>
                        @Html.DisplayNameFor(model => model.addresses[i].street.city)
                        <br />
                        @Html.DisplayFor(model => model.addresses[i].street.city.Name)
                    </dd>
                    <dd>
                        @Html.DisplayNameFor(model => model.addresses[i].street.city.country)
                        <br />
                        @Html.DisplayFor(model => model.addresses[i].street.city.country.Name)
                    </dd>
                    <br />
                    <div>_ _ _ _ _ _ _ _ _ _ _ _ _ _ _ </div>
                }

            </dl>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-success" />
                </div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    }
</div>